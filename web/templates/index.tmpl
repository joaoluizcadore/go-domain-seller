{{ define "index.tmpl" }}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{ .title }}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
            rel="stylesheet"
        />

        <style>
            :root {
                --primary-color: #488aad;
                --secondary-color: #294250;
                --success-color: #3d8c28;
                --error-color: #832323;
            }
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: "Roboto", sans-serif;
                font-size: 16px;
                line-height: 1.6;
                background-color: var(--primary-color);
                color: #fff;
                align-items: center;
                justify-content: center;
            }

            .root {
                max-width: 100%;
                padding: 20px;
                display: flex;
                flex-direction: column;
                align-items: stretch;
                margin: 0 auto;
                width: 100%;
            }

            @media (min-width: 768px) {
                .root {
                    width: 768px;
                }
            }

            header {
                background-color: var(--secondary-color);
                text-align: center;
                padding: 20px;
                border: 1px solid var(--secondary-color);
                border-radius: 10px;
                margin-top: 10px;
                box-shadow: 5px 5px 3px #232323;
            }
            header h2 {
                font-weight: bold;
                font-size: 20pt;
            }

            .form-box {
                background-color: var(--secondary-color);
                padding: 20px;
                border: 1px solid var(--secondary-color);
                border-radius: 10px;
                margin-top: 20px;
                box-shadow: 5px 5px 3px #232323;
                order: 1;
            }

            .input {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid var(--secondary-color);
                margin-top: 5px;
            }

            button {
                width: 50%;
                padding: 10px;
                border-radius: 5px;
                border: 0px;
                margin-top: 5px;
                background-color: #4c870d;
                color: #fff;
                font-weight: bold;
                cursor: pointer;
            }
            .form div {
                margin-top: 20px;
            }

            .center {
                text-align: center;
            }

            .success_message {
                background-color: var(--success-color);
                padding: 10px;
                border-radius: 10px;
                margin-top: 20px;
                text-align: center;
            }
            .error_message {
                background-color: var(--error-color);
                padding: 10px;
                border-radius: 10px;
                margin-top: 20px;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <div class="root">
            <header>
                <h2>Esse domínio está à venda!</h2>
                <h3>
                    Se estiver interessado(a), entre em contato no formulário
                    abaixo!
                </h3>
            </header>
            <div class="form-box">
                {{ if .success_message }}
                <div class="success_message">
                    <p>
                        {{ .success_message }}
                    </p>
                </div>
                {{ end }}

                {{ if .error_message }}
                <div class="error_message">
                    <p>
                        {{ .error_message }}
                    </p>
                </div>
                {{ end }}

                <form method="post" action="/">
                    <div>
                        <label for="name">Nome:</label>
                        <input
                            class="input"
                            type="text"
                            id="name"
                            name="name"
                            value="{{ .form.Name }}"
                            required
                        />
                    </div>
                    <div>
                        <label for="email">E-mail:</label>
                        <input
                            class="input"
                            type="email"
                            id="email"
                            name="email"
                            value="{{ .form.Email }}"
                            required
                        />
                    </div>
                    <div>
                        <label for="phone">Fone/Whatsapp:</label>
                        <input
                            class="input"
                            type="tel"
                            id="phone"
                            name="phone"
                            value="{{ .form.Phone }}"
                            required
                        />
                    </div>
                    <div>
                        <label for="message">Mensagem:</label>
                        <textarea
                            class="input"
                            rows="5"
                            id="message"
                            name="message"
                            required
                            >{{ .form.Message }}</textarea
                        >
                    </div>
                    <div class="center">
                        <button type="submit">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
{{ end }}
